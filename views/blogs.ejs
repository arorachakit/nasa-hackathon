<% include partials/header %>
<div class="container " id="about">
        <% if(currentUser){ %>
        <h1 class="display-5"> <a href="/blog">Create your own Blog</a> </h1>
    <%} %>
    
        <% blog.forEach(function(blog){ %>
        <div class="my-3 pt-3 my-md-4 pt-md-4">
             <h1 class="display-5"> <%= blog.name %></h1>
             <div class="row">
                 <div class="col-md-8">
                     <p class="lead">
                            <%= blog.description %>                        
                     </p>
                 </div>
 
                   <div class="col-md-4">
                     <img class="img-fluid" src="<%= blog.image %>">
                 </div>
             </div>
        </div>
        <p>Submitted By: <%= blog.author.username %></p>
            <%  }) %>
</div>
<% include partials/footer %>         